<UserControl x:Class="WanteDev.Views.Components.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WanteDev.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="250"
             >
    <Grid>
        <PasswordBox x:Name="PasswordBox" 
                      Foreground="Black" Background="White"  FontFamily="Century Gothic" FontSize="24" 
                     Margin="10,0,10,0" BorderThickness="0" PasswordChanged="PasswordBox_PasswordChanged" >
        </PasswordBox>
    </Grid>
    
</UserControl>
