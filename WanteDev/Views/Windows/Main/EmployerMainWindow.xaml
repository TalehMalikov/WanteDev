<Window x:Class="WanteDev.Views.Windows.Main.EmployerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WanteDev.Views.Windows.Main"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" BorderThickness="5" BorderBrush="Purple" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="EmployerMainWindow" Height="500" Width="900">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.7*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1.7*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.Row="0">
            <Image  x:Name="logoImage" Cursor="Hand" Source="\Images\logo.jpeg" >
                <Image.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OpenMainWindow,Mode=OneTime}"/>
                </Image.InputBindings>
            </Image>
        </Border>

        <Border Grid.Column="2" Grid.Row="0" >
            <StackPanel Margin="0 0 48 0">
                <Image Width="60" Height="70" x:Name="userImage" Cursor="Hand" Source="{Binding CurrentEmployer.Image}">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding OpenEmployerProfile,Mode=OneTime}"/>
                    </Image.InputBindings>
                </Image>
            </StackPanel>
            
            
        </Border>
        <Border Grid.Column="2" Grid.Row="0" >
            <StackPanel Height="69" VerticalAlignment="Top">
               
                <Button HorizontalAlignment="Right" Width="40" Height="70" Background="Transparent" BorderThickness="0" Click="OnCloseClicked">
                    <materialDesign:PackIcon  Kind="Close" Width="30" Height="30" Foreground="Purple"/>
                </Button>
            </StackPanel>

        </Border>

        <Border Background="White" Grid.Column="1">
            <Border Height="30"  VerticalAlignment="Center" >
                <WrapPanel>
                    <Image Source="\Images\search.png" Height="20" Width="20" Margin="5 5 5 5" />
                    <WrapPanel>

                        <TextBox Width="130" Height="30" HorizontalAlignment="Left">

                        </TextBox>
                        <TextBox Width="130" HorizontalAlignment="Left">

                        </TextBox>
                        <TextBox Width="130" HorizontalAlignment="Left">

                        </TextBox>
                    </WrapPanel>

                </WrapPanel>
            </Border>
        </Border>


